<Window x:Class="MOT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MOT"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Loaded="Window_Loaded" Activated="Window_Activated" Deactivated="Window_Deactivated">
    <StackPanel>

        <Label 
            Name="labelTip"
            HorizontalAlignment="Center"  
            Margin="0,30,0,0"
            Content="" 
            FontSize="30" Foreground="Red"/>

        <Image 
            HorizontalAlignment="Center"  
            VerticalAlignment="Center" 
            Margin="0,50,0,0"
            Width="300" 
            Height="300" 
            Source="Resources/card.jpg"/>
        <Label 
            HorizontalAlignment="Center"  
            Margin="0,30,0,0"
            Content="请刷员工卡！" 
            FontSize="30"/>
    </StackPanel>
</Window>
