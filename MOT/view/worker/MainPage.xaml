<Page x:Class="MOT.view.worker.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MOT.view.worker"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button 
            Grid.Row="0"
            Name="btnChange"
            Content="以旧换新"
            Height="60"
            Width="300"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"  
            FontSize="28"  
            Foreground="White" Background="#FF053364" Click="BtnChange_Click"  />

        <Button 
            Grid.Row="1"
            Name="btnBack"
            Content="退出"
            Height="60"
            Width="300"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"  
            FontSize="28"  
            Foreground="White" Background="#FF053364" Click="BtnBack_Click"  />
        
       
    </Grid>
</Page>
