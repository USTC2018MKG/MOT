<Page x:Class="MOT.view.PreOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MOT.view.worker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PreOrderPage" Loaded="Page_Loaded">

    <StackPanel>
        
        <Label 
            Name="labelTip"
            HorizontalAlignment="Center"  
            Margin="20,20,0,0"
            Content="" 
            FontSize="30"/>

        <Button 
            Name="btnBack"
            Margin="0,150,0,0"
            Content="返回"
            Height="60"
            Width="300"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"  
            FontSize="28"  
            Visibility="Hidden"
            Foreground="White" Background="#FF053364" Click="BtnBack_Click"/>

        <Button 
            Margin="0,50,0,0"
            Name="btnExit"
            Content="确认"
            Height="60"
            Width="300"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"  
            FontSize="28"  
            Foreground="White" Background="#FF053364" Click="BtnExit_Click"/>

    </StackPanel>
</Page>
